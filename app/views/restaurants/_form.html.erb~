<%= form_for(@restaurant) do |f| %>
  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>

      <ul>
      <% @restaurant.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :required=>true %>
  </div>
  <div class="field">
    <%= f.label "Address" %><br>
    <%= f.text_field :address1, :required=>true %><br>
    <%= f.text_field :address2 %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city, :required=>true %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.text_field :state, :required=>true %>
  </div>
  <div class="field">
    <%= f.label :zip %><br>
    <%= f.text_field :zip, :required=>true %>
  </div>
  <div class="field">
    <%= f.label 'Will split checks' %>
    <%= f.radio_button :up_votes, 1, :checked=>false %>
    <br>
    <%= f.label "Won't split checks" %>
    <%= f.radio_button :down_votes, 1, :checked=>false %>
    <br>
    <%= f.label "I'm not sure..." %>
    <%= f.radio_button :up_votes, :checked=>false %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
