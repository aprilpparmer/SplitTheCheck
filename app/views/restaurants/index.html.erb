<div style="text-align:center"><h1>Start by searching for your favorite restaurant!</h2>
<%= form_tag(restaurants_path, method: "get") do %>
  <%= label_tag(:search, "Search for:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

</style></div>
 
<h2>Restaurants:</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Will Split</th>
      <th>Won't Split</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>    
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address1 %><br><%= restaurant.address2 %></td>
        <td><%= restaurant.city %></td>
        <td><%= restaurant.state %></td>
        <td><%= restaurant.zip %></td>
        <td><%= restaurant.up_votes %></td>
        <td><%= restaurant.down_votes %></td>
        <td><%= link_to 'Vote', restaurant %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @restaurants %>
<br>

<%= link_to 'New Restaurant', new_restaurant_path %>
